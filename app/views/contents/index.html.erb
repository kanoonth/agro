<p id="notice"><%= notice %></p>

<h1>Listing Contents</h1>

<div class="container">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Content images</th>
      <th>Content type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td><%= content.body %></td>
        <td><%= content.content_images %></td>
        <td><%= content.content_type %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

