<p id="notice"><%= notice %></p>

<h1>Listing Notifications</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cultivated Area</th>
      <th>Disease</th>
      <th>Cf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.flatten.each do |notification| %>
      <tr>
        <td><%= notification.cultivated_area.user.name %></td>
        <td><%= notification.cultivated_area.name %></td>
        <td><%= notification.disease.name %></td>
        <td><%= notification.cf.to_s[0..3] %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>
