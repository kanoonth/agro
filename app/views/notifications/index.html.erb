<p id="notice"><%= notice %></p>
<div class="contents-container">
  <h1 class="glyphicon glyphicon-warning-sign"> การแจ้งเตือนทั้งหมด</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th class="">วันที่แจ้ง</th>
        <th>โอกาสในการเกิด</th>
        <th>ชื่อโรค</th>
        <th colspan="3"></th>

      </tr>
    </thead>

    <tbody>
      <% @notifications.each do |notification| %>
        <tr data-link="<%= 'notifications/' + notification.id.to_s %>" style="cursor: pointer">
          <td ><%= notification.created_at.strftime("%d/ %m/ %Y") %></td>
          <td ><%= notification.percent_cf %></td>
          <td ><%= notification.disease.name %></td>
          <td><%= link_to 'ลบการแจ้งเตือน', notification,class: "glyphicon glyphicon-trash", method: :delete, data: { confirm: 'ต้องการที่จะลบการแจ้งเตือนนี้ใช่หรือไม่?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<script type="text/javascript">
  $("tr[data-link]").click(function() {
    window.location = this.dataset.link
  });
</script>
