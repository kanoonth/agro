<p id="notice"><%= notice %></p>

<h1>Listing Content Images</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @content_images.each do |content_image| %>
      <tr>
        <td><%= content_image.image %></td>
        <td><%= link_to 'Show', content_image %></td>
        <td><%= link_to 'Edit', edit_content_image_path(content_image) %></td>
        <td><%= link_to 'Destroy', content_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

